<div class="container">


<div class="row">
<div class="col-md-3 col-md-offset-3">

<h1>Editing Book</h1>


<%= form_for(@book) do |f| %>

<p>title</p>

<%= f.text_field :title, class: "book_title" %>

<p>body</p>

<%= f.text_field :body, class: "book_body" %>

