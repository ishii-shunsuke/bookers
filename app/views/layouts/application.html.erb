<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header class="navbar navbar-fixed-top navbar-inverse" style="background-color:black;">
  <div class="container">
  <nav class="nav navbar-nav navbar-left" style="color:white;">
    <span>Bookers</span>
  </nav>
  <nav>
    <ul class="nav navbar-nav navbar-right" style="list-style:none;">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "glyphicon glyphicon-home home" %>
      </li>
      <li class="nav-item">
        <%= link_to "Users", users_path, class: "glyphicon glyphicon-user users" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book books" %>
      </li>
      <li class="nav-item">
        <%= link_to 'logout',  destroy_user_session_path, method: :delete, class: "lglyphicon glyphicon-log-out logout" %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "glyphicon glyphicon-home home" %>
      </li>
      <li class="nav-item">
        <%= link_to "About", "", class: "glyphicon glyphicon-link about about" %>
      </li>
      <li class="nav-item">
        <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
      </li>
      <li class="nav-item">
        <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
      </li>
    <% end %>
  </ul>
</nav>
</header>

  </footer>
  </body>

    <%= yield %>
    <footer class="footer">
    <div class="container">
    <p class="col-md-6 col-md-offset-3" >
            <div class= "text-align-right">
         CopyRight Infratop.inc</p>
         </div>
    </div>
  </footer>
  </body>
</html>
