<div class="body">
	<div class="container">




<h1>User info</h1>

<%= form_for(@user) do |f| %>

<div class="field">
	<label for="user_name">Name</label>
<%= f.text_field :username, class: "name" %>
</div>
<div class="field">
<label for="user_image">Image</label>
<%= f.attachment_field :profile_image, class: "user_image" %>
</div>
<div class="field">
	<label for="user_introduction">Introduction</label>
<%= f.text_field :introduction, class: "introduction" %>
</div>



<%= f.submit "Update User" %>

<% end %>

</div>
</div>