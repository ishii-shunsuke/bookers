<div class="body">
<div class="container">






<div class="row">
<div class="col-xs-3">
<h1>User info</h1>

 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<% if @user.id == current_user.id %>
<% end %>

<table class="table">
	<tbody>
	<tr>
		<th>name</th>
		<th><%= @user.username %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>
   </tbody>
</table>

<div class="row">
<%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
</div>
<h1>New book</h1>

<%= render 'users/new',users: @user %>
</div>


<div class="col-xs-9">
<h1>Books</h1>


<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<% @user.books.each do |book| %>

	<tbody>
		<tr>
			<td>
<%= attachment_image_tag @user, :profile_image, :fill, 10, 10, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<% if @user.id == current_user.id %>
<% end %>
           </td>
           <td>
           	<%= book.title %>
           </td>
           <td>
           	<%= book.body %>
           </td>
           </tr>
       </tbody>

<% end %>

</table>
</div>
