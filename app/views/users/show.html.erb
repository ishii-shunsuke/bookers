<div class="body">
<div class="container">

<div class="flash">
<%= flash[:notice] %>
</div>

<div class="flash">
<%= flash[:update] %>
</div>





<div class="row">
<div class="col-xs-3">
<h1>User info</h1>

 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "user_image", fallback: "no_image.jpg" %>


<table class="table">
	<tbody>
	<tr>
		<th>name</th>
		<th><%= @user.username %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>
   </tbody>
</table>

<div class="row">
<%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
</div>
<h1>New book</h1>

<%= render 'users/new',users: @user %>
</div>


<div class="col-xs-9">
<h1>Books</h1>


<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>

	<% @user.books.each do |book| %>

	<tbody>
		<tr>
			<td>
<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "user_image", fallback: "no_image.jpg", size: '40x40' %>
           </td>
           <td>
           	<%= link_to book.title, book_path(book.id), class: "book_#{@book.id}"%>
           </td>
           <td>
           	<%= book.body %>
           </td>
           </tr>
       </tbody>

<% end %>

</table>
</div>
